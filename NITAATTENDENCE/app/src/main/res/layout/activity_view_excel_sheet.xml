<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adminlogin"
    tools:context="com.example.android.nitaattendence.ViewExcelSheetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/adminlogin"
        android:layout_marginTop="12sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses"
            android:textSize="24sp"
            android:layout_marginLeft="4sp"
            android:textColor="#ffffff"/>

        <Spinner
            android:id="@+id/coursedropdownspinner"
            android:layout_width="244sp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:gravity="center"
            android:layout_marginLeft="4sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/generate_excel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/generateexcelsheet"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>
